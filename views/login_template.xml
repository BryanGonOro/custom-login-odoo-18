<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="remove_odoo_footer" inherit_id="web.login" name="Custom Login Branding">
    
    <xpath expr="." position="inside">
      <!-- Oculta el texto "Con la tecnología de Odoo" -->
      <t t-jquery="div.border-top a[href*='odoo.com']" t-operation="replace">
        <div/>
      </t>

      <!-- Agrega mensaje de bienvenida -->
      <t t-jquery="form.oe_login_form" t-operation="prepend">
        <div class="alert alert-info text-center mb-3">
          ¡Bienvenido a <strong>DOWE</strong>!
        </div>
      </t>
    </xpath>

  </template>
</odoo>
