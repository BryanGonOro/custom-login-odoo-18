<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="custom_login_branding" inherit_id="web.login" name="Remove Odoo Footer and Add Welcome Message">
    <xpath expr="." position="inside">

      <!-- Eliminar el texto 'Con la tecnología de Odoo' -->
      <t t-jquery="div.border-top.text-center.small.mt-4.pt-3" t-operation="replace">
        <div/>
      </t>

      <!-- Agregar un mensaje arriba del formulario -->
      <t t-jquery="form.oe_login_form" t-operation="prepend">
        <div class="alert alert-info text-center mb-3">
          ¡Bienvenido a <strong>DOWE</strong>!
        </div>
      </t>

    </xpath>
  </template>
</odoo>
